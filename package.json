{
  "name": "ncfg",
  "description": "Configuration management library for Node.js",
  "version": "0.13.3",
  "author": "Panates Ltd.",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/ncfg.git"
  },
  "main": "lib/index.js",
